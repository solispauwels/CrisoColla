{% if content != null %}

<div class="content-element border {{ size }} relative">
    {{ menu | raw }}
    <div class="margin">
        {% if content.title != "" %}
            <h3 class="sub-section-header">{{ content.title }}</h3>
        {% endif %}
        <p>{{ content.content | nl2br}}</p>
        <i>{{ content.created|date('d/m/Y') }}</i>
    </div>

</div>

{% endif %}
