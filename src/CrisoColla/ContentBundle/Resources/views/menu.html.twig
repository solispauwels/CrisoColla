<div class="content-menu btn-group float-right-top hide">
    <a class="btn dropdown-toggle" data-toggle="dropdown">
        <i class="icon-cog"></i>
        <span class="caret"></span>
    </a>
    <ul class="dropdown-menu pull-right">
        {% if type != "default" and father is not defined %}
        <li><a class="content-size"><i class="icon-resize-horizontal"></i> {{ "Size" | trans({}, 'content') }}</a></li>
        {% endif %}
        <li><a class="content-edit"><i class="icon-edit"></i> {{ "Edit" | trans({}, 'content') }}</a></li>
        <li><a class="content-delete"><i class="icon-trash"></i> {{ "Delete" | trans({}, 'content') }}</a></li>
        {% if father is not defined %}
        <li><a class="content-region"><i class="icon-th-large"></i> {{ "Region" | trans({}, 'content') }}</a></li>
        {% endif %}
    </ul>
</div>

