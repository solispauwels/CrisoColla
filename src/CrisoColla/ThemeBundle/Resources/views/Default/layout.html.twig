<!DOCTYPE html>
<html>
	<head>
		<title>{{ title }}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		{% stylesheets debug=false filter='lessphp' output='themes/Default/style.css' 
			'@CrisoCollaThemeBundle/Resources/views/Default/common.less'
		%}<link href="{{ asset('themes/Default/style.css') }}" rel="stylesheet" media="screen">
		{% endstylesheets %}
	</head>
	<body>
		<div class="navbar navbar-fixed-top">

			<div class="navbar-inner">

				<div class="container">
					<a class="brand" href="#">{{ title }}</a>

					{% if header is defined %}
					{{ header }}
					{% endif %}

					<ul class="nav pull-right">
					<li class="active"><a href="#">Home</a></li>
					<li><a href="#">Link</a></li>
					<li><a href="#">Link</a></li>
					</ul>
				</div>
			</div>
		</div>

		<div class="wrap">
			<div id="push"></div>
			<div class="container-fluid container">
									
				<div class="row-fluid">
					{% if left is defined %}
					<div class="span2">
						{{ left | raw }} 
					</div>
					{% endif %}

					<div class="{% if left is defined and right is defined %}span8{% elseif left is defined or rigth is defined %}span10{% else %}span12{% endif %}">
						{{ content | raw}}
					</div>

					{% if left is defined %}
					<div class="span2">
						{{ right | raw }} 
					</div>
					{% endif %}
				</div>
			</div>
		</div>

		<div id="footer">
			<div class="container">
			{% if footer is defined %}
			{{ footer }} 
			{% endif %}
			</div>
		</div>

		<script src="http://code.jquery.com/jquery.js"></script>
		<script src="{{ asset('js/bootstrap.min.js') }}"></script>
	</body>
</html>
